# -*- makefile -*-
## -----------------------------------------------------------------------
## Intent: Display repository build hierarchy dependencies
##   - voltha-proto builds before voltha-lib-go
## -----------------------------------------------------------------------

.DEFAULT_GOAL := help

voltha-proto  := $(null)
deps          += voltha-proto

voltha-lib-go := $(null)
voltha-lib-go += voltha-proto
deps          += voltha-lib-go

## -----------------------------------------------------------------------
## -----------------------------------------------------------------------
all:

## -----------------------------------------------------------------------
## -----------------------------------------------------------------------
$(deps):
	@echo "[REPO-DEPS: $@]"
	@echo '======================================================================='
	@for dep in $($@); do \
	    echo "    $${dep}"; \
	done

## -----------------------------------------------------------------------
## -----------------------------------------------------------------------
help ::
	@echo 'Usage: make [options] [target] ...'
	@for dep in $(deps); do \
	    printf '  %-33.33s %s\n' "$${dep}" "Display build order for repo:$${dep}" ;\
	done

# [EOF]


