# -*- makefile -*-
## ---------------------------------------------------------------------------
## ---------------------------------------------------------------------------

.PHONY: validate

.DEFAULT_GOAL := validate

##-------------------##
##---]  GLOBALS  [---##
##-------------------##
TOP         ?= .
MAKEDIR     ?= $(TOP)/makefiles

include $(MAKEDIR)/consts.mk
SHELL := /bin/bash -eu
include $(MAKEDIR)/repos.mk
include $(MAKEDIR)/commands/include.mk

tgts += checkout-repos-all

##---------------------##
##---]  MAKEFILES  [---##
##---------------------##
all: $(tgts)

## -----------------------------------------------------------------------
## -----------------------------------------------------------------------
clean:

## -----------------------------------------------------------------------
## -----------------------------------------------------------------------
sterile:
	$(RM) -r sandbox

## -----------------------------------------------------------------------
## -----------------------------------------------------------------------
gather:
	find sandbox -name 'VERSION' -print0 | xargs -0 cat

## -----------------------------------------------------------------------
## -----------------------------------------------------------------------
validate:
	$(MAKE) -C validate

# [EOF]
